<dx:ThemedWindow
    x:Class="WpfApp7.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxdiag="http://schemas.devexpress.com/winfx/2008/xaml/diagram"
    xmlns:local="clr-namespace:WpfApp7"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="900"
    Height="450"
    WindowKind="Normal"
    mc:Ignorable="d">

    <Grid>
        <local:DiagramDesignerControlEx SelectedStencils="BasicShapes">
            <dxdiag:DiagramShape Height="75"
                                 Position="120,150"
                                 Width="100"/>
            <dxdiag:DiagramContainer HeaderPadding="8,8,8,8"
                                     Height="200"
                                     Header="Heading"
                                     Position="330,150"
                                     Padding="8,8,8,8"
                                     ShowHeader="true"
                                     Shape="StandardContainers.Banner"
                                     Width="200"/>
        </local:DiagramDesignerControlEx>
    </Grid>

</dx:ThemedWindow>
